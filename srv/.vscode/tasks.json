{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Cargo Run DEBUG",
            "type": "shell",
            "command": "cargo run -- -vvv --config config.toml",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Cargo Run TRACE",
            "type": "shell",
            "command": "cargo run -- -vvvv --config config.toml",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Cargo Build",
            "type": "shell",
            "command": "cargo build",
            "group": "build"
        }
    ]
}